<Window x:Class="Pixeval.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:Pixeval"
        mc:Ignorable="d"
        Title="Pixeval" 
        WindowStartupLocation="CenterScreen"
        mui:ThemeManager.IsThemeAware="True"
        mui:WindowHelper.UseModernWindowStyle="True"
        mui:TitleBar.IsBackButtonVisible="True"
        Height="900" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <mui:PersonPicture></mui:PersonPicture>
            <mui:ListView>

            </mui:ListView>
        </StackPanel>
        <StackPanel Grid.Column="1"></StackPanel>
    </Grid>
</Window>
